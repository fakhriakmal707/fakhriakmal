#include <iostream>
using namespace std;

int main(){
  int a=2, b=20, n; // GENAP //
  cout << "Program Menghitung 10 deret bilangan genap : " << endl;
  cout << "\n";
  for(a=a; a<=b; a+=2){
    cout <<a;
    if(a<b){
      cout << "+";
    }
  }
  cout << "="; //
  n=(b+1)/2; // RUMUSNYA DISINI //
  n=n*n; //
  cout << n;
  getchar();
}
